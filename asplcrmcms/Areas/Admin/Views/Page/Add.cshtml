@model Infrastructure.Model.PageModel

@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div class="pagetitle">
    <h1>Pages</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="~/Admin/Page">Page</a></li>
            <li class="breadcrumb-item">Add Page</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#page-description">Page Content</button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#page-seo">SEO</button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#page-service">Services</button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#page-portfolio">Portfolio</button>
                        </li>

                    </ul>
                    <form class="row g-3" method="post" asp-action="Add" asp-controller="Page" enctype="multipart/form-data">

                        <div class="tab-content pt-2">
                            <div class="tab-pane fade show active profile-overview" id="page-description">
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Select Menu</label>
                                    <div class="col-md-8 col-lg-9">
                                        <select name="categories" class="form-select" asp-items="@ViewBag.Categories"></select>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Page Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="PageName" class="form-control" placeholder="Page Name" maxlength="35" />
                                        <span asp-validation-for="PageName" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Page Header Title</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Pageheadertitle" class="form-control" placeholder="Page Name" maxlength="35" />
                                        <span asp-validation-for="Pageheadertitle" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Content</label>
                                    <div class="col-md-8 col-lg-9">
                                        <textarea class="tinymce-editor" asp-for="Pagecontent">
                                        </textarea>
                                    </div>
                                </div>


                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Page URL</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Pageurl" class="form-control" placeholder="Page URL" maxlength="130" />
                                        <span asp-validation-for="Pageurl" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Active</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input class="form-check-input" type="checkbox" asp-for="IsActive">
                                    </div>
                                </div>


                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Background Image</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input type="file" class="form-control" name="backgrimg" id="backgrimg" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Home Icon</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input type="text" class="form-control" asp-for="Homeicon"/>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Home Overview</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Homeoverview" class="form-control" maxlength="160" />
                                        <span asp-validation-for="Homeoverview" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Display Home</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input class="form-check-input" type="checkbox" asp-for="Displayhome">
                                    </div>
                                </div>

                            </div>
                            <div class="tab-pane fade profile-overview" id="page-seo">
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Page Title</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Pagetitle" class="form-control" placeholder="Page Title" maxlength="75" />
                                        <span asp-validation-for="Pagetitle" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Keywords</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Pagekeywords" class="form-control" placeholder="Ex. development, application" maxlength="130" />
                                        <span asp-validation-for="Pagekeywords" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Description</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Pagedescription" class="form-control" placeholder="Ex. Page Description" maxlength="130" />
                                        <span asp-validation-for="Pagedescription" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade profile-overview" id="page-service">
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service Section Title</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Servicesectiontitle" class="form-control" placeholder="Page Title" maxlength="75" />
                                        <span asp-validation-for="Servicesectiontitle" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service Section Overview</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Servicesectionoverview" class="form-control" placeholder="Page Title" maxlength="800" />
                                        <span asp-validation-for="Servicesectionoverview" class="text-danger"></span>
                                    </div>
                                </div>


                                @*Service 1*@
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 1 Title</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="service1title" id="service1title" class="form-control" placeholder="Ex. ERP Implementation" maxlength="75" />
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 1 Title with icon</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="service1titlewithicon" id="service1titlewithicon" class="form-control" placeholder="Ex. ERP Implementation" />
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 1 Overview</label>
                                    <div class="col-md-8 col-lg-9">
                                        <textarea name="service1overview" id="service1overview" class="form-control"></textarea>
                                    </div>
                                </div>
                                @*End Service 1*@

                                @*Service 2*@
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 2 Title</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="service2title" id="service2title" class="form-control" placeholder="Ex. ERP Implementation" maxlength="75" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 2 Title with icon</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="service2titlewithicon" id="service2titlewithicon" class="form-control" placeholder="Ex. ERP Implementation" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 2 Overview</label>
                                    <div class="col-md-8 col-lg-9">
                                        <textarea name="service2overview" id="service2overview" class="form-control"></textarea>
                                    </div>
                                </div>
                                @*End Service 2*@

                                @*Service 3*@
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 3 Title</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="service3title" id="service3title" class="form-control" placeholder="Ex. ERP Implementation" maxlength="75" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 3 Title with icon</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="service3titlewithicon" id="service3titlewithicon" class="form-control" placeholder="Ex. ERP Implementation" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 3 Overview</label>
                                    <div class="col-md-8 col-lg-9">
                                        <textarea name="service3overview" id="service3overview" class="form-control"></textarea>
                                    </div>
                                </div>
                                @*End Service 3*@

                                @*Service 4*@
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 4 Title</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="service4title" id="service4title" class="form-control" placeholder="Ex. ERP Implementation" maxlength="75" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 4 Title with icon</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="service4titlewithicon" id="service4titlewithicon" class="form-control" placeholder="Ex. ERP Implementation" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 4 Overview</label>
                                    <div class="col-md-8 col-lg-9">
                                        <textarea name="service4overview" id="service4overview" class="form-control"></textarea>
                                    </div>
                                </div>
                                @*End Service 4*@

                                @*Service 5*@
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 5 Title</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="service5title" id="service5title" class="form-control" placeholder="Ex. ERP Implementation" maxlength="75" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 5 Title with icon</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="service5titlewithicon" id="service5titlewithicon" class="form-control" placeholder="Ex. ERP Implementation" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 5 Overview</label>
                                    <div class="col-md-8 col-lg-9">
                                        <textarea name="service5overview" id="service5overview" class="form-control"></textarea>
                                    </div>
                                </div>
                                @*End Service 5*@

                                @*Service 6*@
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 6 Title</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="service6title" id="service6title" class="form-control" placeholder="Ex. ERP Implementation" maxlength="75" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 6 Title with icon</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="service6titlewithicon" id="service6titlewithicon" class="form-control" placeholder="Ex. ERP Implementation" />
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Service 6 Overview</label>
                                    <div class="col-md-8 col-lg-9">
                                        <textarea name="service6overview" id="service6overview" class="form-control"></textarea>
                                    </div>
                                </div>
                                @*End Service 6*@

                            </div>
                            <div class="tab-pane fade profile-overview" id="page-portfolio">
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Portfolio Section Title</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Portfoliosectiontitle" class="form-control" placeholder="Page Title" maxlength="75" />
                                        <span asp-validation-for="Portfoliosectiontitle" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Select 3 Portfolio</label>
                                    <div class="col-md-8 col-lg-9">
                                        <select name="portfolios" class="form-select" asp-items="@ViewBag.Portfolio"></select>
                                        <br /><small>(Select 3 relevant work for this page)</small>
                                    </div>
                                </div>

                            </div>
                        </div>


                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </form><!-- End floating Labels Form -->


                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
