@model asplcrmcms.Areas.Admin.Models.Request.MenuRequestModel

@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div class="pagetitle">
    <h1>Menu</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="~/Admin/Menu">Menu</a></li>
            <li class="breadcrumb-item">Add Menu</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form class="row g-3" method="post" asp-action="Add" asp-controller="Menu" enctype="multipart/form-data">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <select name="categories" class="form-select" asp-items="@ViewBag.Categories"></select>
                                <label for="floatingSelect">Select Parent Category</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Menu" class="form-control" placeholder="Menu Name" />
                                <span asp-validation-for="Menu" class="text-danger"></span>
                                <label for="floatingZip">Menu Name</label>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </form><!-- End floating Labels Form -->


                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
