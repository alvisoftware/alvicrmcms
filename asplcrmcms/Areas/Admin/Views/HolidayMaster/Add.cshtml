@model Infrastructure.Model.HolidayMasterModel
@{

    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}


<div>
    <h1>Holiday Master</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="~/Admin/HolidayMaster">Holiday(s)</a></li>
            <li class="breadcrumb-item">Add Holidays</li>
        </ol>
    </nav>
</div>
<section>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#page-description">Holiday Info</button>
                        </li>
                    </ul>
                    <form class="row g-3 needs-validation" method="post" asp-action="Add" asp-controller="HolidayMaster" enctype="multipart/form-data" novalidate>

                        <div class="tab-content pt-2">
                            <div class="tab-pane fade show active profile-overview" id="page-description">
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Holidays</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Date" class="form-control" placeholder="No. of Holidays" maxlength="50" onkeypress="return onlyNumberKey(event)" required/>
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                    </div>
                                       
                                </div>

                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
