@model Infrastructure.Model.ExpenseModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div>
    <h1>Expense</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="~/Admin/Expense">Expense(s)</a></li>
            <li class="breadcrumb-item">Add Expense</li>
        </ol>
    </nav>
</div>
<section>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#page-description">Expense Info</button>
                        </li>
                    </ul>
                    <form class="row g-3" method="post" asp-action="Add" asp-controller="Expense" enctype="multipart/form-data">

                        <div class="col-md-6">
                            <label for="floatingSelect" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Name" maxlength="50"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label for="fullName" class="form-label">Amount</label>
                            <input asp-for="Amount" class="form-control" placeholder="Amount" maxlength="50" onkeypress="return onlyNumberKey(event);" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label for="fullName" class="form-label">Date</label>
                            <input type="date" name="Date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}