@model IEnumerable<Infrastructure.Model.CMSPageModel>

@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>Pages</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item">CMS Pages</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Page Name</th>
                                <th scope="col">Page Url</th>
                                <th scope="col">Active</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Pagename</td>
                                    <td>
                                        @item.Pageurl
                                    </td>
                                    <td>@item.IsActive</td>
                                    <td>
                                        <a href="~/Admin/CMSPage/Edit?_sPageId=@item._id"><i class="bi bi-check-circle"></i></a>
                                        <button type="button" class="btn btn-sm btn-dark"><i class="bi bi-folder"></i></button></td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</section>
