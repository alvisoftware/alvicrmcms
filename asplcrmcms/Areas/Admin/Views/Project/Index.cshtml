*@
@{
}
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<h1>Index <a href="/Admin/Project/Add"><i class="bi bi-file-plus"></i></a></h1>

<div class="pagetitle">
    <h1>List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item">CompanyInfo</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped" id="tblList">
                        <thead>
                            <tr>
                                <th scope="col">Company </th>
                                <th scope="col">Name</th>
                                <th scope="col">Cost/Technology</th>                                
                                <th scope="col">StartDate/EndDate</th>
                                <th scope="col">ActualEndDate/Upload</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Company
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Cost<br>@item.Technology
                                    </td>
                                    <td>
                                        @item.StartDate<br>@item.EndDate
                                    </td>
                                    <td>
                                        @item.ActualEndDate<br>@item.Upload
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</section>