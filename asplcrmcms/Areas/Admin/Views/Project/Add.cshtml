@model Infrastructure.Model.ProjectModel
@{

    Layout = "~/Pages/Shared/_AdminLayout.cshtml";

}
<div class="pagetitle">
    <h1>Project</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="~/Admin/Project">ProjectInfo(s)</a></li>
            <li class="breadcrumb-item">Add Info</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#page-description">Project Details</button>
                        </li>
                    </ul>


                    <!-- Multi Columns Form -->
                    <form class="row g-3 needs-validation" method="post" asp-action="Add" asp-controller="Project" enctype="multipart/form-data" novalidate>
                        <div class="col-md-6">
                            <label for="validationCustom01" class="form-label">Company</label>
                            <select name="Company" id="validationCustom01" class="form-select" required>
                                <option selected disabled value="">Choose...</option>
                                <option>Alvi</option>
                                <option>Reliance</option>
                                <option>ABC</option>
                                <option>XYZ</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select a valid Company.
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="inputEmail5" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" id="inputEmail5" maxlength="50" required>
                            <div class="invalid-feedback">
                                Name Field is required.
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="inputPassword5" class="form-label">Cost</label>
                            <input asp-for="Cost" class="form-control" id="inputPassword5" maxlength="50" onkeypress="return onlyNumberKey(event)" required>
                            <div class="invalid-feedback">
                                Cost Field is required.
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <label for="Technology" class="form-label">Technology</label>
                            <input asp-for="Technology" class="form-control" id="Technology" maxlength="150" required>
                            <div class="invalid-feedback">
                                Technology Field is required.
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="validationCustom02" class="form-label">Start Date</label>
                            <input type="date" name="StartDate" class="form-control" id="validationCustom02" required>
                            <div class="invalid-feedback">
                                Start Date is required.
                            </div>
                        </div>
                        <div class="col-md-6">
                             <label for="EndDate" class="form-label">End Date</label>
                             <input type="date" name="EndDate" class="form-control" id="EndDate" required>
                             <div class="invalid-feedback">
                                Cost Field is required.
                             </div>
                        </div>
                        <div class="col-md-6">
                            <label for="inputZip" class="form-label">Actual End Date</label>
                            <input type="date" name="ActualEndDate" class="form-control" id="inputZip" required>
                            <div class="invalid-feedback">
                                Actual End Date Field is required.
                             </div>
                        </div>
                        <div class="col-md-6">
                            <label for="Upload" class="form-label">Upload File</label>
                            <input type="file" name="Upload"  class="form-control" id="Upload" required/>
                            <div class="invalid-feedback">
                                Upload File is required.
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </form><!-- End Multi Columns Form -->
                </div>
            </div>
        </div>
    </div>
</section>

