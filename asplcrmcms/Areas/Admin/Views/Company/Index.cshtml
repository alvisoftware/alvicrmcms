@model IEnumerable<Infrastructure.Model.CompanyDetails>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Index <a href="/Admin/Company/Add"><i class="bi bi-file-plus"></i></a></h1>
<div class="pagetitle">
    <h1>List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item">Vendor</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped" id="tblList">
                        <thead>
                            <tr>
                                <th scope="col">Company Name </th>
                                <th scope="col">Address/Address2</th>
                                <th scope="col">Country / State</th>
                                <th scope="col">City</th>
                                <th scope="col">Website/Email</th>
                                <th scope="col">Contact</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CompanyName</td>
                                    <td>
                                        @item.Address <br> @item.Address2
                                    </td>
                                    <td>@item.Country <br> @item.State</td>
                                    <td>@item.City</td>
                                    <td>
                                        @item.Website<br> @item.Email
                                    </td>
                                    <td>
                                        @item.Contact
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</section>
