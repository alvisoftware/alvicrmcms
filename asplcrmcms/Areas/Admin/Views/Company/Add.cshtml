@model Infrastructure.Model.CompanyDetails
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div>
    <h1>Vendor</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="~/Admin/Company">Vendor(s)</a></li>
            <li class="breadcrumb-item">Add Vendor</li>
        </ol>
    </nav>
</div>
<section>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#page-description">Company Info</button>
                        </li>
                    </ul>
                    <form class="row g-3" method="post" asp-action="Add" asp-controller="Company" enctype="multipart/form-data">

                        <div class="tab-content pt-2">
                            <div class="tab-pane fade show active profile-overview" id="page-description">
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Company Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="CompanyName" class="form-control" placeholder="Company Name" maxlength="50" />
                                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Address</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Address" class="form-control" placeholder="Address" maxlength="50" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                             
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Address2</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Address2" class="form-control" placeholder="Address2" maxlength="50" />
                                        <span asp-validation-for="Address2" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Country Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Country" class="form-control" placeholder="Country Name" maxlength="50" />
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                </div>
                               <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">State Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="State" class="form-control" placeholder="State Name" maxlength="50" />
                                        <span asp-validation-for="State" class="text-danger"></span>
                                    </div>
                                </div>
                               <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">City Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="City" class="form-control" placeholder="City name" maxlength="50" />
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Website name</label>
                                    <div class="col-md-8 col-lg-9">
                                    <input asp-for="Website" class="form-control" placeholder="Website Name" maxlength="50" />
                                    <span asp-validation-for="Website" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Email</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Email" class="form-control" placeholder="Email" maxlength="50" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Contact</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Contact" class="form-control" placeholder="Contact" maxlength="50" />
                                        <span asp-validation-for="Contact" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}