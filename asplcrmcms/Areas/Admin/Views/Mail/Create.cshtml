@model Infrastructure.Model.MailSendModel

@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>Mail</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="~/Admin/SentMail">Mail</a></li>
            <li class="breadcrumb-item">Send Mail</li>
        </ol>
    </nav>
</div>


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#page-description">Mail Content</button>
                        </li>
                    </ul>
                    <form class="row g-3" method="post" asp-action="Create" asp-controller="Mail" enctype="multipart/form-data">
                        <div class="tab-content pt-2">
                            <div class="tab-pane fade show active profile-overview" id="page-description">
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Receiver</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="receiver" class="form-control" placeholder="Ex. mail@gmail.com, mail@gmail.com" maxlength="300" />
                                        <span asp-validation-for="receiver" class="text-danger"></span>
                                        <small>(Note: add (,) mail)</small>
                                    </div>
                                </div>


                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Subject</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="subject" class="form-control" placeholder="Mail Subject" maxlength="50" />
                                        <span asp-validation-for="subject" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Mail</label>
                                    <div class="col-md-8 col-lg-9">
                                        <textarea class="tinymce-editor" asp-for="message">
                                        </textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Send</button>
                        </div>
                    </form><!-- End floating Labels Form -->


                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
