@model Infrastructure.Model.CustomerDataModel

@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>Customer</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="~/Admin/Customer">Customer(s)</a></li>
            <li class="breadcrumb-item">Add Customer</li>
        </ol>
    </nav>
</div>



<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#page-description">Company Detail</button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#page-seo">Personal Detail</button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#page-service">Social Detail</button>
                        </li>
                    </ul>
                    <form class="row g-3" method="post" asp-action="Add" asp-controller="Customer" enctype="multipart/form-data">

                        <div class="tab-content pt-2">
                            <div class="tab-pane fade show active profile-overview" id="page-description">
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Companydetail.Name" class="form-control" placeholder="Company Name" maxlength="50" />
                                        <span asp-validation-for="Companydetail.Name" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Website</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Companydetail.Website" class="form-control" placeholder="Website" maxlength="50" />
                                        <span asp-validation-for="Companydetail.Website" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">E-mail</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Companydetail.Email" class="form-control" placeholder="E-mail" maxlength="70" />
                                        <span asp-validation-for="Companydetail.Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Phone</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Companydetail.Phone" class="form-control" placeholder="Phone" type="number" maxlength="25" />
                                        <span asp-validation-for="Companydetail.Phone" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Country</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Country" class="form-control" placeholder="Phone" maxlength="25" />
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                </div>


                                 <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Category</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Category" class="form-control" placeholder="Category" maxlength="35" />
                                        <span asp-validation-for="Category" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Suitable For</label>
                                    <div class="col-md-8 col-lg-9">
                                         <select name="Suitablefor" class="form-select" asp-items="@ViewBag.Portfolio"></select>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Comment</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Comment" class="form-control" placeholder="Comment" maxlength="75" />
                                        <span asp-validation-for="Comment" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade profile-overview" id="page-seo">
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="persondetail.Name" class="form-control" placeholder="Person Name" maxlength="50" />
                                        <span asp-validation-for="persondetail.Name" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">E-mail</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="persondetail.Email" class="form-control" placeholder="Person E-mail" maxlength="70" />
                                        <span asp-validation-for="persondetail.Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Phone</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="persondetail.Phone" class="form-control" placeholder="Ex. 123" type="number" maxlength="25" />
                                        <span asp-validation-for="persondetail.Phone" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Position</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="persondetail.Position" class="form-control" placeholder="Ex. 123"  maxlength="35" />
                                        <span asp-validation-for="persondetail.Position" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Linkedin</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="persondetail.Linkedin" class="form-control" placeholder="Ex. linkedin/"  maxlength="125" />
                                        <span asp-validation-for="persondetail.Linkedin" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade profile-overview" id="page-service">
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Linkedin</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Socialdetail.Linkedin" class="form-control" placeholder="Ex. linkedin/" maxlength="125" />
                                        <span asp-validation-for="Socialdetail.Linkedin" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Facebook</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Socialdetail.Facebook" class="form-control" placeholder="" maxlength="125" />
                                        <span asp-validation-for="Socialdetail.Facebook" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </form><!-- End floating Labels Form -->


                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}



