@model IEnumerable<Infrastructure.Model.CustomerDataModel>

@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Index <a href="/Admin/Customer/Add"><i class="bi bi-file-plus"></i></a></h1>

<div class="pagetitle">
    <h1>Pages</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item">Customers</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped" id="tblList">
                        <thead>
                            <tr>
                                <th scope="col">Company / Person </th>
                                <th scope="col">Country</th>
                                <th scope="col">Company / Person E-mail</th>
                                <th scope="col">Company / Person Phone</th>
                                <th scope="col">Category / Suitable for</th>
                                <th scope="col">Created Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Companydetail.Name <br> @item.persondetail.Name</td>
                                    <td>
                                        @item.Country
                                    </td>
                                    <td>@item.Companydetail.Email <br> @item.persondetail.Email</td>
                                    <td>@item.Companydetail.Phone <br> @item.persondetail.Phone</td>
                                    <td>
                                        @item.Category <br> @item.Suitablefor
                                    </td>
                                    <td>
                                        @item.Created
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</section>
