@model Infrastructure.Model.PortfolioModel

@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div class="pagetitle">
    <h1>Portfolio</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="~/Admin/Portfolio">Portfolio</a></li>
            <li class="breadcrumb-item">Add Portfolio</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#page-description">Portfolio Content</button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#page-seo">SEO</button>
                        </li>
                    </ul>
                    <form class="row g-3" method="post" asp-action="Add" asp-controller="Portfolio" enctype="multipart/form-data">
                        <div class="tab-content pt-2">
                            <div class="tab-pane fade show active profile-overview" id="page-description">
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Title</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Title" class="form-control" placeholder="Page Name" maxlength="50" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Background Image</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input type="file" name="bgfile" id="bgfile" />
                                        <span asp-validation-for="Bgimg" class="text-danger"></span>
                                        <br />
                                        <small>(Note* : only .jpg, .png, .webp)</small>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Cover Image</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input type="file" name="thumbfile" id="thumbfile" />
                                        <span asp-validation-for="Coverimg" class="text-danger"></span>
                                        <br />
                                        <small>(Note* : only .jpg, .png, .webp)</small>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Inner Image</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input type="file" name="portfoliofile" id="portfoliofile" />
                                        <span asp-validation-for="Portfolioimg" class="text-danger"></span><br />
                                        <small>(Note* : only .jpg, .png, .webp)</small>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Technologies</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Technologies" class="form-control" placeholder="Page Name" maxlength="75" />
                                        <span asp-validation-for="Technologies" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Pageurl</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Pageurl" class="form-control" placeholder="Page Name" maxlength="75" />
                                        <span asp-validation-for="Pageurl" class="text-danger"></span>
                                    </div>
                                </div>



                                <div class="row mb-3">
                                    <label for="Overview" class="col-md-4 col-lg-3 col-form-label">Overview</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Overview" class="form-control" placeholder="Overview" />
                                        <span asp-validation-for="Overview" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Order</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Order" class="form-control" placeholder="Order" maxlength="2" />
                                        <span asp-validation-for="Order" class="text-danger"></span>

                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Active</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input class="form-check-input" type="checkbox" asp-for="IsActive">
                                    </div>
                                </div>
                            </div>


                            <div class="tab-pane fade profile-overview" id="page-seo">
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Page Title</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Pagetitle" class="form-control" placeholder="Page Title" maxlength="75" />
                                        <span asp-validation-for="Pagetitle" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Keywords</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Pagekeywords" class="form-control" placeholder="Page Title" maxlength="130" />
                                        <span asp-validation-for="Pagekeywords" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Description</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="Pagedescription" class="form-control" placeholder="Page Title" maxlength="130" />
                                        <span asp-validation-for="Pagedescription" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </form><!-- End floating Labels Form -->


                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
