@model IEnumerable<Infrastructure.Model.EmployeeModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<h1>Index <a href="/Admin/Employee/Add"><i class="bi bi-file-plus"></i></a></h1>

<div class="pagetitle">
    <h1>List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
            <li class="breadcrumb-item">EmployeeInfo</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped" id="tblList">
                        <thead>
                            <tr>
                                <th scope="col">Full Name/Department </th>
                                <th scope="col">PanNo./AdhaarNo.</th>
                                <th scope="col">Job Type</th>
                                <th scope="col">StartDate</th>
                                <th scope="col">Job Title</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.FullName<br>@item.Department
                                    </td>
                                    <td>
                                        @item.PanNo<br>@item.AdhaarNo
                                    </td>
                                    <td>
                                        @item.JobType
                                    </td>
                                    <td>
                                        @item.StartDate
                                    </td>
                                    <td>
                                        @item.JobTitle
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</section>
