                                <li>
                                    <a href="/Admin/Page">
                                        <i class="bi bi-card-list"></i><span>List of Pages</span>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link collapsed" data-bs-target="#forms-navcms" data-bs-toggle="collapse" href="#">
                                <i class="bi bi-journal-text"></i><span>CMS Pages</span><i class="bi bi-chevron-down ms-auto"></i>
                            </a>
                            <ul id="forms-navcms" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                                <li>
                                    <a href="/Admin/CMSPage">
                                        <i class="bi bi-card-list"></i><span>List of CMS Pages</span>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link collapsed" data-bs-target="#menu-nav" data-bs-toggle="collapse" href="#">
                                <i class="bi bi-journal-text"></i><span>Menu</span><i class="bi bi-chevron-down ms-auto"></i>
