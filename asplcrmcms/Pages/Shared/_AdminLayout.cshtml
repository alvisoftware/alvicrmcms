                <!--Start CRM-->
                <li class="nav-item">
                    <a class="nav-link collapsed" data-bs-target="#crm-nav" data-bs-toggle="collapse" href="#">
                        <i class="bi bi-journal-text"></i><span>CRM</span><i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul id="crm-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                      
                        <li class="nav-item">
                            <a class="nav-link collapsed" data-bs-target="#cust-nav" data-bs-toggle="collapse" href="#">
                                <i class="bi bi-journal-text"></i><span>Customer</span><i class="bi bi-chevron-down ms-auto"></i>
                            </a>
                            <ul id="cust-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                                <li>
                                    <a href="/Admin/Customer">
                                        <i class="bi bi-card-list"></i><span>List of Customer</span>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link collapsed" data-bs-target="#mailmenu-nav" data-bs-toggle="collapse" href="#">
                                <i class="bi bi-journal-text"></i><span>Mail</span><i class="bi bi-chevron-down ms-auto"></i>
                            </a>
                            <ul id="mailmenu-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                                <li>
                                    <a href="/Admin/Mail">
                                        <i class="bi bi-card-list"></i><span>List of Sent Mail</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>
                <!--End CRM-->
                <!--Start Account-->
                <li class="nav-item">
                   <a class="nav-link collapsed" data-bs-target="#Acc-nav" data-bs-toggle="collapse" href="#">
                        <i class="bi bi-journal-text"></i><span>Account</span><i class="bi bi-chevron-down ms-auto"></i>
