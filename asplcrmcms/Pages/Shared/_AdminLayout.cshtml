                                <li>
                                    <a href="/Admin/Menu">
                                        <i class="bi bi-card-list"></i><span>List of Menu</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                     </ul>
                </li>
                <!--End CMS-->
            }
