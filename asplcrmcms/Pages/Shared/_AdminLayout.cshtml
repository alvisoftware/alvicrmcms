                        <li class="nav-item">
                            <a class="nav-link collapsed" data-bs-target="#comp-nav" data-bs-toggle="collapse" href="#">
                                <i class="bi bi-journal-text"></i><span>Vendor</span><i class="bi bi-chevron-down ms-auto"></i>
                            </a>
                            <ul id="comp-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                                <li>
                                    <a href="/Admin/Company">
                                        <i class="bi bi-card-list"></i><span>List of Vendor</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                
                        <li class="nav-item">
                            <a class="nav-link collapsed" data-bs-target="#inv-nav" data-bs-toggle="collapse" href="#">
                                <i class="bi bi-journal-text"></i><span>Invoice</span><i class="bi bi-chevron-down ms-auto"></i>
                            </a>
                            <ul id="inv-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                                <li>
                                    <a href="/Admin/Invoice">
